{
  "name": "nuxt-qrcode",
  "version": "0.3.0",
  "description": "A Nuxt module to provide support for QR Code generation and read.",
  "repository": "https://github.com/sandros94/nuxt-qrcode",
  "homepage": "https://qrcode.s94.dev",
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Sandro Circi",
    "email": "sandro.circi@digitoolmedia.com"
  },
  "build": {
    "externals": [
      "defu",
      "uqr"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground --tunnel",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "docs": "nuxi dev docs",
    "docs:build": "nuxi build docs",
    "docs:preview": "nuxi preview docs",
    "release": "nr lint && nr test && nr prepack && changelogen --release --push --publish",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^3.14.159",
    "@vueuse/core": "^11.2.0",
    "barcode-detector": "^2.3.1",
    "uqr": "^0.1.2",
    "vue-qrcode-reader": "^5.5.11"
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.6.0",
    "@nuxt/eslint-config": "^0.7.0",
    "@nuxt/module-builder": "^0.8.4",
    "@nuxt/schema": "^3.14.159",
    "@nuxt/test-utils": "^3.14.4",
    "changelogen": "^0.5.7",
    "eslint": "^9.15.0",
    "happy-dom": "^15.11.6",
    "nuxt": "^3.14.159",
    "vite": "^5.4.11",
    "vitest": "^2.1.5",
    "vitest-environment-nuxt": "^1.0.1",
    "vue-tsc": "^2.1.10"
  },
  "resolutions": {
    "nuxt-qrcode": "workspace:*"
  }
}
